{
	"comments": {
		"lineComment": "'",
		"blockComment": [
			"[rR][eE][mM]+",
			"[eE][nN][dD]\\s*[rR][eE][mM]+"
		]
	},
	"brackets": [
		[
			"{",
			"}"
		],
		[
			"[",
			"]"
		],
		[
			"(",
			")"
		],
		[
			"<",
			">"
		]
	],
	"autoClosingPairs": [
		{
			"open": "{",
			"close": "}"
		},
		{
			"open": "[",
			"close": "]"
		},
		{
			"open": "(",
			"close": ")"
		},
		{
			"open": "<",
			"close": ">",
			"notIn": [
				"string",
				"comment"
			]
		},
		{
			"open": "\"",
			"close": "\"",
			"notIn": [
				"string",
				"comment"
			]
		}
	],
	"surroundingPairs": [
		[
			"{",
			"}"
		],
		[
			"[",
			"]"
		],
		[
			"(",
			")"
		],
		[
			"<",
			">"
		],
		[
			"\"",
			"\""
		]
	],
	"folding": {
		"markers": {
			"start": "(?:^|;)\\s*\\b[rR][eE][mM]\\b",
			"end": "(?:^|;)\\s*\\b[eE][nN][dD]\\s?[rR][eE][mM]\\b",
		}
	},
	"indentationRules": {
		"increaseIndentPattern": {
			"pattern": "(?:^|^\\s*(Private|Public)\\s+|;)\\s*\\b(If\\s+|For\\s+|While\\s*|Select|Function\\s*|Method\\s*|Enum\\s*|Interface\\s*|Type\\s*|Struct\\s*|Private\\s*$|Else\\s*|Case\\+s)\\b",
			"flags": "i"
		},
		"decreaseIndentPattern": {
			"pattern": "(?:^|;)\\s*\\b(End\\s*(If|Select|Function|Method|Enum|Interface|Type|Struct)\\s*|Next\\s*|Wend\\s*|Public\\s*$|Else\\s*|Case\\+s)\\b",
			"flags": "i"
		},
		"unIndentedLinePattern": {
			"pattern": "(?:^|;)\\s*\\bIf\\s+.*(Then\\s+\\w+|Return\\s*.*$)",
			"flags": "i"
		}
	},
	"onEnterRules": [
		{
			"beforeText": "(?:^|;)\\s*\\b[cC][aA][sS][eE]\\b",
			"action": {
				"indent": "indentOutdent"
			}
		},
		{
			"beforeText": "(?:^|;)\\s*\\b[dD][eE][fF][aA][uU][lL][tT]\\b\\s*$",
			"action": {
				"indent": "indentOutdent"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[fF][uU][nN][cC][tT][iI][oO][nN]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndFunction"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[mM][eE][tT][hH][oO][dD]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndMethod"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[tT][yY][pP][eE]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndType"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[sS][tT][rR][uU][cC][tT]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndStruct"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[eE][nN][uU][mM]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndEnum"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[iI][nN][tT][eE][rR][fF][aA][cC][eE]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndInterface"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[wW][hH][iI][lL][eE]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "Wend"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[fF][oO][rR]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "Next"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[sS][eE][lL][eE][cC][tT]+\\b\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "\tCase \nEndSelect"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[rR][eE][mM]\\b",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndRem"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\?\\s*",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "?"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[pP][rR][iI][vV][aA][tT][eE]\\b",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "Public"
			}
		},
		{
			"previousLineText": "(?:^|;)\\s*\\b[iI][fF]\\s+\\w+",
			"beforeText": "(?:^|;)\\s*$",
			"action": {
				"indent": "outdent",
				"appendText": "EndIf"
			}
		}
	]
}